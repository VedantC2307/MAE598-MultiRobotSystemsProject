<?xml version="1.0"?>
<robot name="robot_lidar">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.1"/> <!-- Length x Width x Height -->
      </geometry>
      <origin xyz="0 0 0.06"/> <!-- Centered at base -->
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- LIDAR Sensor -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.06"/> <!-- On top of the base_link -->
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.15"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.15"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.1"/> <!-- Position of lidar relative to base_link -->
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin xyz="0.15 0.16 0.025" rpy="1.5708 0 0"/> <!-- Adjusted height to be half the base height -->
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin xyz="0.15 0.15 0.025" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0.15 0.15 0.025"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0.15 0.15 0.025" rpy="0 0 0"/> <!-- Fixed the rpy value to properly orient the wheel -->
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin xyz="0.15 -0.16 0.025" rpy="1.5708 0 0"/> <!-- Adjusted height for ground alignment -->
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin xyz="0.15 -0.15 0.025" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0.15 -0.15 0.025"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.15 -0.15 0.025" rpy="0 0 0"/> <!-- Correct rpy value -->
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Caster Wheel -->
  <link name="caster_wheel_link">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <origin xyz="-0.15 0 0.015"/> <!-- Lowered to properly touch the ground -->
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <origin xyz="-0.15 0 0.015"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="-0.15 0 0.015"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <joint name="caster_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="caster_wheel_link"/>
    <origin xyz="-0.15 0 0.015" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Define Materials -->
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

</robot>
